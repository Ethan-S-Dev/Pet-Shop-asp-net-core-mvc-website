@model PetCatalog.MVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<script src="~/scripts/jquery/jquery.validate.min.js"></script>
<script src="~/scripts/jquery/jquery.validate.unobtrusive.min.js"></script>

<link href="~/styles/NewAnimalFormStyle.css" rel="stylesheet" />

<div class="animal-form-continer">
    <div>
        <h2>Login</h2>
    </div>
    <div>
        <form asp-action="Authenticate" enctype="multipart/form-data" method="post">
            <table>
                <tbody>
                    <tr style="visibility:collapse">
                        <td>
                            <input asp-for="RedirectPath" type="text" value="@Model.RedirectPath" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Email"></label>
                            <i class="fas fa-asterisk requird"></i>
                        </td>
                        <td>
                            <input asp-for="Email" type="email" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <span class="error" asp-validation-for="Email"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Password"></label>
                            <i class="fas fa-asterisk requird"></i>
                        </td>
                        <td>
                            <input asp-for="Password" type="password" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <span class="error" asp-validation-for="Password"></span>
                            <span class="error">@ViewBag.Error</span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label class="keep-login-check-box" asp-for="KeepLoggedIn"></label>
                        </td>
                        <td>
                            <input asp-for="KeepLoggedIn" type="checkbox" />
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <button class="btn" type="submit">Login</button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>

