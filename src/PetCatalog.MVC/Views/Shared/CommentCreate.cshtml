@model PetCatalog.MVC.ViewModels.CommentViewModel

<div class="comment-table-div">
    <form asp-controller="Comments" asp-action="AddComment" enctype="multipart/form-data" method="post" style="height:100%">

        <table width="100%" height="100%">
            <thead>
                <tr>
                    <td>
                        <label asp-for="Value"><strong>Add Comment:</strong></label>
                    </td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td height="80%">
                        <textarea type="text" asp-for="Value" style="width:100%;height:100%;resize:none"></textarea>
                    </td>
                    
                </tr>
                <tr style="visibility:collapse">
                    <td style="visibility:collapse">
                        <input type="number" asp-for="AnimalId" value="@Model.AnimalId" readonly="readonly" style="visibility:collapse" />
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <button type="submit" style="margin:5px 0px 2px 0px" class="btn">Add</button>
                    </td>
                </tr>
            </tfoot>                   
        </table>
    </form>
</div>