@model IEnumerable<PetShop.Application.ViewModels.CategoryViewModel>
@{
    ViewBag.Title = "Pet Shop";
    ViewBag.AdminClss = "active";
    ViewBag.EnableCommentDelete = true;
}
<script src="~/scripts/CategorySelect.js"></script>
<script src="~/scripts/AnimalView.js"></script>

<link href="~/styles/AdminPageStyle.css" rel="stylesheet" />
<link href="~/styles/CatalogStyle.css" rel="stylesheet" />


<div>
    <div>
        <h2>Animals</h2>
    </div>
    <div>
        <a asp-action="NewAnimal"><i class="far fa-plus-square" title="Add Animal"></i></a>
    </div>
    <div>

        
        <div>

            <table>
                <thead>
                    <tr>
                        <td>
                            <select id="cata-select" asp-items="@(new SelectList(Model,"CategoryId","Name"))">
                                <option value="-1" selected>All</option>
                            </select>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cata in Model)
                    {
                        <tr class="cate-select-row" id="tr-id-@cata.CategoryId">
                            <td>
                                <div >
                                    @foreach (var animal in cata.Animals)
                                    {
                                    <div class="anima-edit-box">
                                        <partial name="AnimalView" model="animal" />
                                            <form method="get" class="edit-box">
                                                <button asp-action="DeleteAnimal" asp-route-id="@animal.AnimalId">Delete</button>
                                                <button asp-action="EditAnimal" asp-route-id="@animal.AnimalId">Edit</button>
                                            </form>                                                                              
                                    </div>
                                    }
                                            
                                </div>
                            </td>                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>  
</div>

